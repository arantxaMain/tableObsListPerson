<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
          prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="es.arantxa.controller.TablaController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0" prefWidth="100.0"/>
        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="10.0" percentWidth="60.0" prefWidth="100.0"/>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" percentHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" percentHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" percentHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" percentHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label text="First Name:"/>
        <Label text="Last Name:" GridPane.rowIndex="1"/>
        <Label text="Birth Date:" GridPane.rowIndex="2"/>
        <TextField fx:id="txtFirstName" GridPane.columnIndex="1"/>
        <TextField fx:id="txtLastName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <DatePicker fx:id="dateBirth" maxWidth="1.7976931348623157E308" prefHeight="25.0" prefWidth="397.0"
                    GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2"/>
        <Button mnemonicParsing="false" onAction="#btnAddClick" text="Add" GridPane.columnIndex="2"/>
        <Button mnemonicParsing="false" onAction="#btnRestoreClick" prefHeight="25.0" prefWidth="129.0"
                text="Restore Rows" GridPane.rowIndex="3"/>
        <Button mnemonicParsing="false" onAction="#btnDeleteClick" text="Delete Selected Rows" GridPane.columnIndex="1"
                GridPane.rowIndex="3"/>
        <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="3" GridPane.rowIndex="4">
            <columns>
                <TableColumn fx:id="colId" prefWidth="75.0" text="Id"/>
                <TableColumn fx:id="colFirstName" prefWidth="75.0" text="First Name"/>
                <TableColumn fx:id="colLastName" prefWidth="75.0" text="Last Name"/>
                <TableColumn fx:id="colBirthDate" prefWidth="75.0" text="Birth Date"/>
            </columns>
        </TableView>
    </children>
</GridPane>
